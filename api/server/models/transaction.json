{
  "name": "Transaction",
  "plural": "transactions",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "Timestamp": true
  },
  "properties": {
    "status": {
      "type": "number",
      "default": 0
    },
    "tranCode": {
      "type": "string"
    },
    "softDelete": {
      "type": "boolean",
      "default": false
    }
  },
  "validations": [],
  "relations": {
    "orders": {
      "type": "hasMany",
      "model": "Order",
      "foreignKey": "transactionId"
    },
    "staff": {
      "type": "belongsTo",
      "model": "User",
      "foreignKey": "staffId"
    },
    "customer": {
      "type": "belongsTo",
      "model": "User",
      "foreignKey": "customerId"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "staff",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "customer",
      "permission": "ALLOW"
    }
  ],
  "methods": {
    "prototype.updateStatus": {
      "accepts": [
        {
          "arg": "status",
          "type": "number",
          "required": true
        }
      ],
      "returns": {
        "type": "object",
        "root": true
      },
      "description": "Update status of a transaction.",
      "http": {
        "path": "/status",
        "verb": "PUT"
      }
    }
  }
}
