{
  "name": "Transaction",
  "plural": "transactions",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "Timestamp": true
  },
  "properties": {
    "status": {
      "type": "string",
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "orders": {
      "type": "hasMany",
      "model": "Order",
      "foreignKey": "transactionId"
    },
    "staff": {
      "type": "belongsTo",
      "model": "User",
      "foreignKey": "staffId"
    },
    "customer": {
      "type": "belongsTo",
      "model": "User",
      "foreignKey": "customerId"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    }
  ],
  "methods": {}
}
